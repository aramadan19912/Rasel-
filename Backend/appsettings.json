    "Username": "",
    "Password": ""
  },
  "Application": {
    "Name": "Outlook Inbox Management System",
    "Version": "1.0.0",
    "MaxAttachmentSize": 10485760,
    "AllowedFileTypes": [".pdf", ".doc", ".docx", ".xls", ".xlsx", ".txt", ".jpg", ".jpeg", ".png", ".gif"],
    "MessageRetentionDays": 365,
    "EnableSpamFilter": true,
    "EnableRealTimeNotifications": true
