# ============================================
# RASEL INBOX MANAGEMENT SYSTEM
# Environment Configuration
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_SA_PASSWORD=YourStrongPassword123!
DB_CONNECTION_STRING=Server=db,1433;Database=RaselInbox;User Id=sa;Password=YourStrongPassword123!;TrustServerCertificate=True;

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_ISSUER=RaselInboxSystem
JWT_AUDIENCE=RaselInboxUsers
JWT_EXPIRY_MINUTES=60

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:4000,http://your-vps-ip:4000,https://yourdomain.com

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@rasel-inbox.com
SMTP_FROM_NAME=Rasel Inbox System

# ============================================
# STORAGE CONFIGURATION
# ============================================
MAX_UPLOAD_SIZE_MB=50
UPLOAD_PATH=/app/uploads

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=Information
LOG_PATH=/app/logs

# ============================================
# SIGNALR CONFIGURATION
# ============================================
SIGNALR_ENABLED=true

# ============================================
# VPS CONFIGURATION (For CI/CD)
# ============================================
VPS_HOST=your-vps-ip-or-domain
VPS_USERNAME=root
VPS_PORT=22
# VPS_SSH_KEY should be added as GitHub Secret

# ============================================
# ADDITIONAL SETTINGS
# ============================================
TIMEZONE=UTC
ASPNETCORE_ENVIRONMENT=Production
NODE_ENV=production
